{
    "name": "blob",
    "scopeName": "source.blob",
    "fileTypes": ["asset", "blob", "font", "gfxlib", "ui"],
    "patterns": [
        { "include": "#all" }
    ],
    "repository": {
        "all": {
            "patterns": [
                { "include": "#quote" },
                { "include": "#option" },
                { "include": "#stateSetter" },
                { "include": "#function" },
                { "include": "#expression" },
                { "include": "#atom" },
                { "include": "#string" },
                { "include": "#number" },
                { "include": "#bool" },
                { "include": "#input" },
                { "include": "#state" },
                { "include": "#enum" },
                { "include": "#comment" }
            ]
        },
        "expression": {
            "name": "meta.none.expression.blob",
            "begin": "\\(",
            "end": "\\)",
            "patterns": [
                { "include": "#all" }
            ]
        },
        "function": {
            "name": "meta.entity.name.function.blob-function-$1.blob",
            "begin": "\\([[:space:]]*?([^.#:\"()@\\d[:space:]][^\"()[:space:]]*?(?!:))(?=[[:space:]\\)])",
            "end": "\\)",
            "patterns": [
                { "include": "#all" }
            ]
        },
        "option": {
            "name": "meta.entity.name.type.object.option.blob-option-$1.blob",
            "begin": "\\([[:space:]]*?([^\"()[:space:]]*?):(?=[[:space:]\\)])",
            "end": "\\)",
            "patterns": [
                { "include": "#all" }
            ]
        },
        "quote": {
            "name": "meta.keyword.control.function.blob-function-quote.blob",
            "begin": "\\([[:space:]]*?(quote*)(?=[[:space:]\\)])",
            "end": "\\)",
            "patterns": [
                { "include": "#all" }
            ]
        },
        "stateSetter": {
            "name": "variable.state.blob-state-$1.blob",
            "begin": "\\([[:space:]]*?\\.(.*?)!(?=[[:space:]\\)])",
            "end": "\\)",
            "patterns": [
                { "include": "#all" }
            ]
        },
        "atom": {
            "name": "constant.other.symbol.atom.blob-atom-$1.blob",
            "match": ":(.*?)(?=[[:space:]\\(\\)])"
        },
        "string": {
            "name": "string.quoted.double.blob",
            "begin": "\".*?",
            "end": "\""
        },
        "number": {
            "name": "constant.numeric.decimal.blob",
            "match": "[+-]?\\d+\\.?\\d*?(?=[[:space:]\\(\\)])"
        },
        "bool": {
            "name": "constant.numeric.boolean.blob",
            "match": "#(f|t)"
        },
        "input": {
            "name": "entity.name.tag.input.blob-input-$1.blob",
            "match": "@(.*?)(?=[[:space:]\\(\\)])"
        },
        "state": {
            "name": "variable.state.blob-state-$1.blob",
            "match": "\\.(.*?)(?=[[:space:]\\(\\)])"
        },
        "enum": {
            "name": "constant.variable.enum.blob-enum-$1.blob",
            "match": "&(.*?)(?=[[:space:]\\(\\)])"
        },
        "comment": {
            "name": "comment.blob",
            "match": ";.*$"
        }
    }
}
